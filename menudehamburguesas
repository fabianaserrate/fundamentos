#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main()

{
	float costo;
	int opcion;
	cout<< "\n \t MENU"<<endl;
    cout<< "\n \t ****"<<endl; 
	cout<< "1.- Hamburguesas"<<endl;
	cout<< "2.- Hamburguesas con queso"<<endl;
	cout<< "3.- Papas fritas"<<endl;
	cout<< "4.- Sodas"<<endl;
	cout<< "ingrese una opcion:";
	cin>> opcion;
	switch (opcion)
	{
	case 1: costo=3;
		break;
	case 2: costo=5;
		break;
	case 3: costo=2;
		break;
	case 4: costo=2.5;
		break;
	default: cout<<"Opcion invalida:"<<endl;
	}
	cout<<"El costo es:"<<endl;
	getch();
}
