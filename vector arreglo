#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main(){ 
	int n;
	int numeros[100];
	int suma = 0;
	cout<<"ingrese el numero de elementos:";
	cin>> n;
	//cargar los elementos del vector
	for (int i=0; i<n; i++)
	{
		cout<<"ingrese el numero ["<<i<<"]:";
	    cin>> numeros [i];
	}
	//sumar los elementos del vector 
	for (int i=0; i<5; i++){//
		suma = suma + numeros [i]; //suma+=numeros[i]
}
	//mostrar los resultados
	cout<<"\t Los resultados de la suma son:"<<endl;
	for (int i=0; i<n;i++)
	    cout<<"\t \t"<<numeros[i];
	cout<<"\t===================="<<endl;
	cout<<"\t"<<suma<<endl;
	getch();

 }
